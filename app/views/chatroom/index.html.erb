<div class="ui container">
  <h1 class="ui center blue aligned icon header">
    <div class="fa"></div><br>
    Say something....
  </h1>
</div>

<div class="ui container">

  <div class="ui grid">
      <div class="twelve wide column">
        <div class="ui fluid raised card fixed-height">
          <div class="content">
            <div class="ui feed">
              <%= render @messages %>          
            </div>
          </div>
          <div class="extra content">
            <%= form_for(@message, html: {class: "ui reply form", role: "form"}, url: message_path) do |f| %>
              <div class="field">
                <div class="ui fluid icon input">
                  <%= f.text_field :body %>
                  <%= f.button '<i class="icon blue users"></i>'.html_safe %>
                </div>
              </div>

            <% end %>
          </div>  
        </div>
      </div>
      <div class="four wide column">
        <div class="ui fluid raised card fixed-height">
          <div class="content">
            <div class="ui grey fluid inverted vertical menu">
              <a class="item">Home</a>
              <a class="item">Messages</a>
              <a class="item">Friends</a>
            </div>
          </div>
        </div>
    </div>
  </div>
</div>