<div class="ui container">
  <h1 class="ui center blue aligned icon header">
    <div class="fa"></div><br>
    MessageMe is your Rails 6 chat app!
  </h1>
</div>

<div class="ui container">

 <div class="ui placeholder segment">
    <div class="ui two column very relaxed stackable grid">
      <div class="column">
        <%= form_for(:session, html: {class: "ui form"}, url: login_path) do |f| %>
          <div class="field">  
            <%= f.label :username, 'Username:' %>
              <div class="ui left icon input">
                <%= f.text_field :username, placeholder: "Enter username" %>
                <i class="user icon"></i>
              </div>
          </div>
          <div class="field">
            <%= f.label "Password:" %>
            <div class="ui left icon input">
              <%= f.password_field :password, placeholder: "Enter password" %>
              <i class="lock icon"></i>
            </div>
          </div>
          <div class="field">
            <%= f.submit "Login", class: "ui fluid blue submit button" %>
          </div>
        <% end %>  
      </div>
      <div class="middle aligned column">
        <%= link_to nil do %>
          <div class="ui big button">
            <i class="signup icon"></i>
            Sign Up
        <% end %>    
          </div>

          
          
        </div>
      </div>
      <div class="ui vertical divider">
      Or
    </div>
    </div>
    
  </div>
</div>

</div>